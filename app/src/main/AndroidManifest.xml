<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uxbertbookapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.EditBookActivity"
            android:label="Edit Book"

            android:parentActivityName=".Activities.BookListActivity"
            >
        </activity>
        <activity android:name=".Activities.CreateBookActivity"
            android:label="New Book"
            android:parentActivityName=".Activities.BookListActivity"

            />
        <activity android:name=".Activities.SignUpActivity"
            android:label="Sign Up"

            android:parentActivityName=".Activities.SignInActivity"

            />
        <activity android:name=".Activities.BookListActivity"
            android:label="Book List"

            />
        <activity android:name=".Activities.SignInActivity"
            android:label="Uxbert Book App"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>